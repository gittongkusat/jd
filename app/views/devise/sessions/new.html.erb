<h2 class="text-center">登录</h2>
<div class="sign-in-detail">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %><span style="font-size: 0.2em;"><%= link_to("忘记密码？", new_password_path(resource_name)) %></span>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions text-center">
    <%= f.button :submit, "登录",class: "btn btn-success btn-block" %>
  </div>
<% end %>
</div>
<div class="mt text-center">
		  	<p class="log_in_sign_up">还没有注册？<%= link_to("注册账户", new_registration_path(resource_name)) %></p>
		 </div>
